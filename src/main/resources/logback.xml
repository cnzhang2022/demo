<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logDir" value="/logs/demo"/>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %C %logger{50}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="logfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logDir}/myok.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${logDir}/logs/history/demo.%d{yyyy-MM-dd}${processName}.log.gz</FileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %C %logger{50}:%L - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="org.apache.http">
        <level value="WARN"/>
    </logger>
    <!--<logger name="org.springframework">-->
    <!--<level value="WARN"/>-->
    <!--</logger>-->
    <!--<logger name="org.springframework.web">-->
    <!--<level value="ERROR"/>-->
    <!--</logger>-->
<!--    <logger name="org.hibernate">-->
<!--        <level value="WARN"/>-->
<!--    </logger>-->
    <logger name="com.tao.demo.dao">
        <level value="DEBUG"/>
    </logger>
    <logger name="ch.qos.logback">
        <level value="WARN"/>
    </logger>

    <!-- root 默认日志配置 -->
    <root level="INFO">
<!--        <appender-ref ref="logfile"/>-->
        <appender-ref ref="stdout"/>
    </root>
</configuration>
